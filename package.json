{
  "name": "systems",
  "version": "0.0.1",
  "description": "Systems",
  "main": "dist/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "npx tsc build",
    "cover": "NODE_ENV=test npx nyc --reporter=lcov npm t",
    "lint": "npx eslint .",
    "prepare-patch-release": "npm run build && npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
    "publish-patch-release": "npm run prepare-patch-release && git push origin main && git push --tags",
    "size": "size-limit",
    "test": "NODE_ENV=test npx mocha --require ts-node/register --extensions ts test/**/* ",
    "update-changelog": "npx ts-node scripts/update-changelog.ts"
  },
  "author": "Paul Jensen <paul@anephenix.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run build && git add dist/ && npm t"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "husky": "^9.1.7",
    "mocha": "^11.1.0",
    "nyc": "^17.1.0",
    "prettier": "^2.5.1",
    "size-limit": "^10.0.3",
    "size-limit-preset-node-lib": "^0.3.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "10 kB"
    }
  ]
}
