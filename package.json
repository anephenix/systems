{
	"name": "@anephenix/systems",
	"version": "0.0.14",
	"description": "Systems",
	"main": "dist/lib/index.js",
	"types": "dist/lib/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/lib/index.d.ts",
			"import": "./dist/lib/index.js"
		}
	},
	"type": "module",
	"engines": {
		"node": ">=10"
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc --project tsconfig.json",
		"cover": "NODE_ENV=test npx nyc --reporter=lcov npm t",
		"lint": "npx eslint .",
		"lint:package": "npx publint",
		"prepare-patch-release": "npm t && npm run build && npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
		"publish-patch-release": "npm run prepare-patch-release && git push origin main && git push --tags",
		"size": "size-limit",
		"test": "NODE_ENV=test npx vitest --run",
		"update-changelog": "node --experimental-strip-types scripts/update-changelog.ts",
		"prepare": "husky"
	},
	"author": "Paul Jensen <paul@anephenix.com>",
	"license": "MIT",
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm t"
		}
	},
	"prettier": {
		"printWidth": 80,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/anephenix/systems.git"
	},
	"homepage": "https://github.com/anephenix/systems",
	"bugs": {
		"url": "https://github.com/anephenix/systems/issues"
	},
	"dependencies": {
		"uuid": "^13.0.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.20.0",
		"@size-limit/file": "^12.0.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "^25.0.2",
		"@types/uuid": "^11.0.0",
		"eslint": "^9.20.0",
		"globals": "^17.0.0",
		"husky": "^9.1.7",
		"nyc": "^17.1.0",
		"prettier": "^3.4.2",
		"publint": "^0.3.14",
		"size-limit": "^12.0.0",
		"size-limit-node-esbuild": "^0.4.0",
		"tslint": "^6.1.3",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.23.0",
		"vitest": "^4.0.3"
	},
	"size-limit": [
		{
			"path": "dist/lib/*.js",
			"limit": "10 kB"
		}
	]
}
