{
  "name": "@anephenix/systems",
  "version": "0.0.10",
  "description": "Systems",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
  "type": "module",
  "engines": {
    "node": ">=10"
  },
	"files": [
		"dist",
		"README.md"
	],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "cover": "NODE_ENV=test npx nyc --reporter=lcov npm t",
    "lint": "npx eslint .",
    "lint:package": "npx publint",
    "prepare-patch-release": "npm t && npm run build && npm run size && npm run update-changelog && git add CHANGELOG.md && git commit -m \"Updated changelog\" && npm version patch",
    "publish-patch-release": "npm run prepare-patch-release && git push origin main && git push --tags",
    "size": "size-limit",
    "test": "NODE_ENV=test npx vitest --run",
    "update-changelog": "npx ts-node scripts/update-changelog.ts"
  },
  "author": "Paul Jensen <paul@anephenix.com>",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm t"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/mocha": "^10.0.10",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.20.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "publint": "^0.3.14",
    "size-limit": "^11.1.6",
    "size-limit-preset-node-lib": "^0.4.0",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.2.4"
  },
  "size-limit": [
    {
      "path": "dist/lib/*.js",
      "limit": "10 kB"
    }
  ]
}
